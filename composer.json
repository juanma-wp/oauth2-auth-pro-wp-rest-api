{
  "name": "wp-rest-auth/oauth2",
  "description": "Enterprise-grade OAuth2 authentication with API Proxy security for WordPress REST API",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "oauth2",
    "authentication",
    "rest-api",
    "enterprise",
    "proxy",
    "security"
  ],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "WordPress Developer",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4",
    "wp-rest-auth/auth-toolkit": "dev-main"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/juanma-wp/wp-rest-auth-toolkit"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "wp-phpunit/wp-phpunit": "^6.0",
    "yoast/phpunit-polyfills": "^1.0",
    "wp-coding-standards/wpcs": "^3.2",
    "squizlabs/php_codesniffer": "^3.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "WPRESTAuthOAuth2\\": "includes/"
    }
  },
  "scripts": {
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:clean": "wp-env clean",
    "env:destroy": "wp-env destroy",
    "test": "wp-env run tests-cli --env-cwd=wp-content/plugins/oauth2-auth-pro-wp-rest-api vendor/bin/phpunit",
    "test-unit": "wp-env run tests-cli --env-cwd=wp-content/plugins/oauth2-auth-pro-wp-rest-api vendor/bin/phpunit --testsuite=unit",
    "test-integration": "wp-env run tests-cli --env-cwd=wp-content/plugins/oauth2-auth-pro-wp-rest-api vendor/bin/phpunit --testsuite=integration",
    "test-oauth2": "wp-env run tests-cli --env-cwd=wp-content/plugins/oauth2-auth-pro-wp-rest-api vendor/bin/phpunit --filter=OAuth2",
    "test-proxy": "wp-env run tests-cli --env-cwd=wp-content/plugins/oauth2-auth-pro-wp-rest-api vendor/bin/phpunit --filter=Proxy",
    "test-local": "phpunit --configuration phpunit.xml",
    "lint": "phpcs",
    "lint-fix": "phpcbf"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
