{
    "name": "wp-rest-auth/oauth2",
    "description": "Enterprise-grade OAuth2 authentication with API Proxy security for WordPress REST API",
    "type": "wordpress-plugin",
    "keywords": ["wordpress", "oauth2", "authentication", "rest-api", "enterprise", "proxy", "security"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "WordPress Developer",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-phpunit/wp-phpunit": "^6.0",
        "yoast/phpunit-polyfills": "^1.0",
        "wp-coding-standards/wpcs": "^2.3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "WPRESTAuthOAuth2\\": "includes/"
        }
    },
    "scripts": {
        "env:start": "wp-env start",
        "env:stop": "wp-env stop",
        "env:clean": "wp-env clean",
        "env:destroy": "wp-env destroy",
        "test": "wp-env run tests-cli phpunit --configuration phpunit.xml",
        "test-unit": "wp-env run tests-cli phpunit --configuration phpunit.xml --testsuite unit",
        "test-integration": "wp-env run tests-cli phpunit --configuration phpunit.xml --testsuite integration",
        "test-oauth2": "wp-env run tests-cli phpunit --configuration phpunit.xml --filter OAuth2",
        "test-proxy": "wp-env run tests-cli phpunit --configuration phpunit.xml --filter Proxy",
        "test-local": "phpunit --configuration phpunit.xml",
        "lint": "phpcs --standard=WordPress --extensions=php .",
        "lint-fix": "phpcbf --standard=WordPress --extensions=php ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}